        </div>
        <div class="middle">
          <div class="user-profile">
            <%= @user.profile %>
          </div>
        </div>
        <div class="lower">
          <%= link_to 'books()', '#', class: "card-type-select" %>
          <%= link_to 'words()', '#', class: "card-type-select" %>
          <%= link_to 'bookmarks()', '#', class: "card-type-select" %>
        </div>
      </div>
      <%# booksの表示 %>
      <div class="card">
        <div class="card-content">
