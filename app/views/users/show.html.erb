    <%= render "layouts/side-bar" %>
  </div>
  <div>
    <div class="header">
      <%= render "layouts/header" %>
    </div>
    <div class="cards">
      <div class="user-info">
        <div class="upper">
          <div class="user-nickname">
            <%= @user.nickname %>
          </div>
          <div class="user-edit">
            <%= link_to '編集する', '#', class: "user-edit-link" %>
